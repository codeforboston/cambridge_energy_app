<% @tip = Tip.get_tip(current_user) %>
<% if UserTip.find_by(tip_id: @tip.id, user_id: current_user.id, result: "Liked") %>
  <%= render 'tips/share' %>
<% else %>
  <% @user_tip = UserTip.new() %>
  <%= form_for(@user_tip, remote: true) do |f| %>
    <%= f.hidden_field :tip_id, :value => @tip.id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    Did you like this tip?<br>
    <%= f.radio_button(:result, "Liked") %>
    <%= f.label(:result_worked, "Yes!") %>
    <%= f.radio_button(:result, "Disliked") %>
    <%= f.label(:result_failed, "No.") %><br>
    <%= f.submit 'Vote', class: "button" %>
  <% end %>
<% end %>
